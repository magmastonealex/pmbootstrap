pkgname=luna-next-cardshell
pkgver=9999
pkgrel=1
pkgdesc="The default shell used for luna-next."
arch="all"
url="http://webos-ports.org"
license="GPL-3.0+"
depends="luna-next qt5-qtbase qt5-qtdeclarative qt5-qtmultimedia"
makedepends="cmake-modules-webos"
source="$pkgname-$pkgver.zip::https://github.com/webOS-ports/luna-next-cardshell/archive/77659074d7f82732766904c413cbece0501f399c.zip"

prepare() {
	mkdir -p "$srcdir"/build
	#cd "$srcdir"/$pkgname-b51360839d2241717eae5fe8f9d360f68da267db
	#patch -p1 < "$srcdir"/remove-np-pthread.patch
}

build() {
	cd "$srcdir"/build
	cmake "$srcdir"/$pkgname-77659074d7f82732766904c413cbece0501f399c \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWEBOS_INSTALL_ROOT=/
	make
}

package() {
	cd "$srcdir"/build
	make DESTDIR="$pkgdir" install
}
