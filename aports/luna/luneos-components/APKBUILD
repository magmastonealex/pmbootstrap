pkgname=luneos-components
pkgver=9999
pkgrel=0
pkgdesc="LuneOS styled QtQuick Controls"
arch="all"
url="http://webos-ports.org"
license="GPL-3.0+"
depends="qt5-qtbase luna-service2 qt5-qtgraphicaleffects qt5-qtdeclarative qt5-qtquickcontrols2 glib pmloglib"
makedepends="cmake-modules-webos qt5-qtbase-dev qt5-qtdeclarative-dev glib-dev qt5-qtquickcontrols2 luna-service2-dev pmloglib-dev"
source="$pkgname-$pkgver.zip::https://github.com/webOS-ports/luneos-components/archive/305b2c8e2c4c5870fc737a0d2809799d5c58a2e1.zip"

prepare() {
	mkdir -p "$srcdir"/build
}

build() {
	cd "$srcdir"/build
	export QMAKE_CXXFLAGS=" -isystem /usr/include/glib-2.0 -isystem /usr/lib/glib-2.0/include "
	qmake-qt5 "$srcdir"/$pkgname-305b2c8e2c4c5870fc737a0d2809799d5c58a2e1	
	make
}

package() {
	cd "$srcdir"/build
	make install INSTALL_ROOT="$pkgdir"
}
