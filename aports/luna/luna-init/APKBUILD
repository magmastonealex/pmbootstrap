pkgname=luna-init
pkgver=9999
pkgrel=0
pkgdesc="Initialization and font setup files used by luna-sysmgr."
arch="all"
url="http://webos-ports.org"
license="GPL-3.0+"
depends=""
makedepends="cmake-modules-webos python2 py2-tz"
source="$pkgname-$pkgver.zip::https://github.com/webOS-ports/luna-init/archive/5fff640fb0b9f3e973c13d1620889b2da4c11766.zip"
options="!check"

prepare() {
	mkdir -p "$srcdir"/build

}

build() {
	cd "$srcdir"/build
	cmake "$srcdir"/$pkgname-5fff640fb0b9f3e973c13d1620889b2da4c11766 \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWEBOS_INSTALL_ROOT=/
	make
}

package() {
	cd "$srcdir"/build
	make DESTDIR="$pkgdir" install
}
