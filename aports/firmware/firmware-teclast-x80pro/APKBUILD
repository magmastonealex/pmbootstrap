pkgname=firmware-teclast-x80pro
pkgver=1
pkgrel=0
pkgdesc="Teclast X80 Pro Firmware"
url="https://github.com/hadess/rtl8723bs"
arch="noarch"
license="proprietary"
options="!check !strip"

# Source
_commit="cc77e7b6092c54500058cd027b679421b9399905"
source=$pkgname-$_commit.tar.gz::$url"/archive/${_commit}.tar.gz"

package() {
	cd "$srcdir/rtl8723bs-${_commit}"

	# Wifi
	install -Dm644 "rtl8723bs_nic.bin" \
		"$pkgdir/lib/firmware/rtlwifi/rtl8723bs_nic.bin"
}

